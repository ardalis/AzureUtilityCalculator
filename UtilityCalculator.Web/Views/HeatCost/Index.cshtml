@{
    ViewData["Title"] = "Home Page";
}
@model HeatCostViewModel
<h1>Heating Cost Calculator</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="SizeInSquareFeet"></label>
                <input asp-for="SizeInSquareFeet" />
            </div>
            <div class="form-group">
                <label asp-for="ClimateZoneId"></label>
                <select asp-for="ClimateZoneId" asp-items="Model.ClimateZones"></select>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
